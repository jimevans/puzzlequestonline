@model IEnumerable<System.Web.Security.MembershipUser>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Register")
</p>
<table>
    <tr>
        <th>
            User Name
        </th>
        <th>
            Email Address
        </th>
        <th>
            SMS Email Address
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProviderUserKey.ToString() }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProviderUserKey.ToString() }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProviderUserKey.ToString() }) | 
            @Html.ActionLink("Send Message", "SendMessage", new { id = item.ProviderUserKey.ToString() })
        </td>
    </tr>
}

</table>
<p>
@Html.ActionLink("Back", "Index", "Admin")
</p>