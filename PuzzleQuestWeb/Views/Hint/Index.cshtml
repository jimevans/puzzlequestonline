@model IEnumerable<PuzzleQuestWeb.Models.Hint>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            HintText
        </th>
        <th>
            HintOrder
        </th>
        <th>
            SolutionWarning
        </th>
        <th>
            PuzzleId
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HintText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HintOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SolutionWarning)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PuzzleId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HintId }) |
            @Html.ActionLink("Details", "Details", new { id=item.HintId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HintId })
        </td>
    </tr>
}

</table>
